<% if @message %>
  <p style="text-align:center">(<%= @message %>)</p>
<% end %>

<form action="/members/<%= @name %>" method="post">
 <input name="_method" type="hidden" value="put" />
 <fieldset style="width:0px; text-align:center; border-width:medium;">
  <legend><b>Information Update<b></legend>
  Name:<br>
  <input type="text"
   name="new_name"
   value="<%= @name %>"
   style="padding: 5px;
   font-size:100%;
   text-align:center">
   <br><br>
  Age:<br>
  <input type="text"
   name="age"
   value="<%= @age %>"
   style="padding: 5px;
   font-size:100%;
   text-align:center">
   <br><br>
  Gender:<br>
  <input type="text"
   name="gender"
   value="<%= @gender %>"
   style="padding: 5px;
   font-size:100%;
   text-align:center">
   <br><br>
  Job:<br>
  <input type="text"
   name="job"
   value="<%= @job %>"
   style="padding: 5px;
   font-size:100%;
   text-align:center">
   <br><br>

  <form action="/members">
    <input type="submit" value="Cancel" style="font-size:100%;
     background-color:#4CAF50; float:left" class="tiny_butt">
  <form>

  <input type="submit" value="Update"
   style="font-size:100%; background-color:#20B2AA; float:right" class="tiny_butt">

 </fieldset>
</form><br>

