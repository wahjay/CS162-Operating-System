<% if @message %>
  <p style="text-align:center">(<%= @message %>)</p>
<% end %>

<form action="/members" method="post">
 <fieldset style="width:0px; text-align:center; border-width:medium;">
  <legend><b>Enter your info<b></legend>
  Name:<br>
  <input type="text"
   name="name"
   value="<%= @name %>"
   style="padding: 5px;
   font-size:100%;
   text-align:center">
   <br><br>
  Age:<br>
  <input type="text"
   name="age"
   value="<%= @age %>"
   style="padding: 5px;
   font-size:100%;
   text-align:center">
   <br><br>
  Gender:<br>
  <input type="text"
   name="gender"
   value="<%= @gender %>"
   style="padding: 5px;
   font-size:100%;
   text-align:center">
   <br><br>
  Job:<br>
  <input type="text"
   name="job"
   value="<%= @job %>"
   style="padding: 5px;
   font-size:100%;
   text-align:center">
   <br><br>
  <input type="submit"
   style="font-size:100%; background-color:#20B2AA;" class="tiny_butt">
 </fieldset>
</form><br>

